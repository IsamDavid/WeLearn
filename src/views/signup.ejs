<% if(signupMessage.length>0){ %>

    <div class="alert alert-primary" role="alert">
        <%= signupMessage%>
    </div>
    
<% } %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <link  rel="icon"   href="../img/libros.png" type="image/png" />
    <title>Registrarse</title>
</head>
<body class="bg-white">
    <!-- Barra de Navegación-->
    <nav class="navbar navbar-light bg-white">
        <div class="container">
          <a class="navbar-brand" href="/">
            <img src="../img/flecha.svg" alt="" width="30" height="24">
            Atras
          </a>
        </div>
      </nav>

      <!-- Form Login -->
      <div class="container" id="registro">
          <div class="row formulario ">
            <div class="col-xl-4 col-lg-3 col-md-3 col-sm-0">

            </div>
            <div class="col-xl-4 col-lg-6 col-md-3 col-sm-3 px-4">
                <form action="/signup" method="POST" class="bg-light iniciar">
                    <div class="justify-content-center text-center py-3">
                        <h2 class="py-1"><span class="we">We </span> <span class="learn">Learn</span></h2>
                        <img src="../img/libros-logo-login.png" width="64px" height="64px" alt="">
                    </div>
                    <h4 class="text-center py-1" >Registrarse</h4>
                    <div class="form-group pt-3 pb-2 px-3">
                        <label for="name" name="name" class="form-label">Nombre</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="Ingresar nombre" required>
                    </div>
                    <div class="form-group justify-content-center px-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" name="email" class="form-control " id="email" placeholder="Ingresar correo" required>
                    </div>
                    <div class="form-group pt-2 pb-4 px-3">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="Ingresar contraseña" minlength="8" maxlength="16" required>
                    </div>
                    <div class="justify-content-center text-center py-3">
                        <button type="submit" class="btn btn-info  text-white  text-center w-75 ">Registrarse</button>
                    </div>
                    <div class="text-center py-2">
                        <p class="texto-cuenta">Si ya tienes una cuenta, puede ingresar <a href="signin">aquí</a>.</p>
                    </div>
                </form>    
                
            </div>
            <div class="col-xl-4 col-lg-3 col-md-3 col-sm-0">

            </div>
          </div>
      </div>
    <script src="../js/jquery-3.4.1.min.js"></script>
    <script src="../js/bootstrap.min.js"></script>
</body>
</html>