<% if(signinMessage.length>0){ %>
    <div class="alert alert-primary" role="alert">
        <%= signinMessage %>
    </div>
<% } %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <link  rel="icon"   href="../img/libros.png" type="image/png" />
    <title>Iniciar Sesión</title>
</head>
<body class="bg-white">
    <!-- Barra de Navegación-->
    <nav class="navbar navbar-light bg-white">
        <div class="container">
          <a class="navbar-brand" href="/">
            <img src="../img/flecha.svg" alt="" width="30" height="24">
            Atras
          </a>
        </div>
      </nav>

      <!-- Form Login -->
      <div class="container" id="registro">
          <div class="row formulario ">
            <div class="col-xl-4 col-lg-3 col-md-3 col-sm-0">

            </div>
            <div class="col-xl-4 col-lg-6 col-md-3 col-sm-3 px-4 ">
                <form action="/signin" method="POST" class="bg-light iniciar">
                    <div class="justify-content-center text-center py-3">
                        <h2 class="py-1"><span class="we">We </span> <span class="learn">Learn</span></h2>
                        <img src="../img/libros-logo-login.png" width="64px" height="64px" alt="">
                    </div>
                    <h4 class="text-center py-3" >Iniciar Sesión</h4>
                    <div class="form-group justify-content-center px-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" name="email" class="form-control " id="email" placeholder="Ingresar correo">
                    </div>
                    <div class="form-group pt-3 pb-4 px-3">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="Ingresar contraseña" >
                    </div>
                    <div class="justify-content-center text-center py-3">
                        <button type="submit" class="btn btn-info  text-white  text-center w-75 ">Iniciar</button>
                    </div>
                    <div class="text-center py-2">
                        <p class="texto-cuenta">Si no tiene una cuenta, puede registrarse <a href="/signup">aquí</a>.</p>
                    </div>
                </form>    
                
            </div>
            <div class="col-xl-4 col-lg-3 col-md-3 col-sm-0">

            </div>
          </div>
      </div>
    <script src="../js/jquery-3.4.1.min.js"></script>
    <script src="../js/bootstrap.min.js"></script>
</body>
</html>